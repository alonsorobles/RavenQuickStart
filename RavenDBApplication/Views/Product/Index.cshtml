@model RavenDBApplication.Models.Product[]

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<table>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Title</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@Html.ActionLink("Edit", "Edit", new {id = product.Id})</td>
            <td>@Html.ActionLink("Delete", "Delete", new {id = product.Id})</td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Add", "Add")</p>